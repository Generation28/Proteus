// Common Code for LCD display
#include<LiquidCrystal.h>
LiquidCrystal lcd(7,6,5,4,3,2);
void setup(){
lcd.begin(16,2);
}
void loop()
{
lcd.clear();
  delay(1000);
  lcd.setCursor(3,0);
  lcd.print("Hello uncle");
  lcd.setCursor(3,1);
  lcd.print("Na masti ");
  delay(1000);
}
// My Approach of Code For car 
#include<LiquidCrystal.h>
 LiquidCrystal lcd(12,11,10,9,8,7);
void setup(){
lcd.begin(16,2);
pinMode(A0,INPUT);
pinMode(A1,INPUT);
pinMode(A2,INPUT);
pinMode(A3,INPUT);
pinMode(2,OUTPUT);
pinMode(3,OUTPUT);
pinMode(4,OUTPUT);
pinMode(5,OUTPUT);
}

void loop(){
int sw1=digitalRead(A0);
int sw2=digitalRead(A1);
int sw3=digitalRead(A2);
int sw4=digitalRead(A3);
if (sw1==HIGH){
lcd.clear();
delay(1000);
lcd.setCursor(1,0);
lcd.print("forward");
digitalWrite(2,HIGH);
digitalWrite(3,LOW);
digitalWrite(4,HIGH);
digitalWrite(5,LOW);
delay(500);
}
else if (sw2==HIGH){
lcd.clear();
delay(1000);
lcd.setCursor(1,0);
lcd.print("Backward");
digitalWrite(2,LOW);
digitalWrite(3,HIGH);
digitalWrite(4,LOW);
digitalWrite(5,HIGH);
delay(500);
}
else if (sw3==HIGH){
lcd.clear();
delay(1000);
lcd.setCursor(1,0);
lcd.print("leftist");
digitalWrite(2,HIGH);
digitalWrite(3,LOW);
digitalWrite(4,LOW);
digitalWrite(5,HIGH);
delay(500);
}
else if (sw4==HIGH){
lcd.clear();
delay(1000);
lcd.setCursor(1,0);
lcd.print("Rightiest");
digitalWrite(2,LOW);
digitalWrite(3,HIGH);
digitalWrite(4,HIGH);
digitalWrite(5,LOW);
delay(500);
}
}
// Sir's Approach
#include <LiquidCrystal.h>
LiquidCrystal lcd(12, 11, 10, 9, 8, 7);
void setup() {
  lcd.begin(16, 2);
  pinMode(2, OUTPUT);
  pinMode(3, OUTPUT);
  pinMode(4, OUTPUT);
  pinMode(5, OUTPUT);
  pinMode(A0, INPUT);
  pinMode(A1, INPUT);
}
void loop() 
{
  int sw1=digitalRead(A0);
  int sw2=digitalRead(A1);
  int sw3=digitalRead(A2);
  int sw4=digitalRead(A3);

  if(sw1==HIGH)
  {
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("Forward");
  digitalWrite(2, HIGH);
  digitalWrite(3, LOW);
  digitalWrite(4, HIGH);
  digitalWrite(5, LOW);
  delay(1000);
  }
  else if(sw2==HIGH)
  {
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("Backward");
  digitalWrite(2, LOW);
  digitalWrite(3, HIGH);
  digitalWrite(4, LOW);
  digitalWrite(5, HIGH);
  delay(1000);
  }
 else if(sw3==HIGH)
  {
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("Left");
  digitalWrite(2, LOW);
  digitalWrite(3, HIGH);
  digitalWrite(4, HIGH);
  digitalWrite(5, LOW);
  delay(1000);
  }
  else if(sw4==HIGH)
  {
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("Right");
  digitalWrite(2, HIGH);
  digitalWrite(3, LOW);
  digitalWrite(4, LOW);
  digitalWrite(5, HIGH);
  delay(1000);
  }
  else 
  {
  lcd.clear();
  lcd.setCursor(0,0);
  lcd.print("Stop");
  digitalWrite(2, LOW);
  digitalWrite(3, LOW);
  digitalWrite(4, LOW);
  digitalWrite(5, LOW);
  delay(1000);
  }
}

